<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemModel_body_LL"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/itemModel_IMG"
        android:layout_width="match_parent"
        android:scaleType="centerInside"
        android:layout_height="110dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ebebeb"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/itemModel_type_T"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:background="#00a7f4"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="型号"
            android:textColor="#ebebeb"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/itemModel_name_T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="模板1"
            android:textColor="#00a7f4"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/itemModel_select_IMG"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/xz_btn_normal" />
    </LinearLayout>
</LinearLayout>